{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../.config/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strictNullChecks": true,
    "allowJs": false,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015"
  },
  "include": [
    "."
  ],
  "exclude": [
    "./**/templates/**/*"
  ]
}

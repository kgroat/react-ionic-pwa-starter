
<% endpoint = 'https://pwa.kevingroat.io/verify/' + user.username + '/' + user.verificationKey %>
<div style="<%= defaultStyles.body %>">
  <div style="<%= defaultStyles.inset %>">
    <div style="<%= defaultStyles.main %>">
      <div style="<%= defaultStyles.header %>">Welcome to <%= package.appName %>!</div>
      <div style="<%= defaultStyles.content %>">
        <p style="padding-top: 0">
          To verify your email, click the link below, or visit: <%= endpoint %>
        </p>
        <p style="<%= defaultStyles.center %>; padding-top: 1em">
          <a href="<%= endpoint %>" style="<%= defaultStyles.button %>">
            Verify My Email
          </a>
        </p>
      </div>
    </div>
  </div>

  <div style="<%= defaultStyles.footer %>">
    For help, email <a href="mailto:<%= package.pushEmail %>"><%= package.pushEmail %></a>.
  </div>
</div>